<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D2D0D0D0"/> <!-- Color de fondo cuando se presiona -->
            <corners android:radius="20dp"/> <!-- Radio de los bordes -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/> <!-- Color de fondo normal -->
            <corners android:radius="15dp"/> <!-- Radio de los bordes -->
        </shape>
    </item>
</selector>
