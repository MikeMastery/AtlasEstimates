<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.dashboard.activity_product_detail">

    <!-- Imagen del Producto con borde -->
    <ImageView
        android:id="@+id/ivProductImageDetail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"
 /> <!-- Puedes usar un drawable para el borde -->

    <!-- Nombre del Producto -->
    <TextView
        android:id="@+id/tvProductNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:text="Nombre del Producto" />

    <!-- Descripción Detallada del Producto -->
    <TextView
        android:id="@+id/tvProductDescriptionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimary2"
        android:paddingTop="8dp"
        android:textSize="16sp"
        android:maxLines="10"
        android:ellipsize="end"
        android:layout_marginBottom="20dp"
        android:text="Descripción detallada del producto que explica sus características y usos..." />



</LinearLayout>
