<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:id="@+id/top_frame"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/file_plus"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background"
            android:src="@drawable/file_plus1">
        </ImageButton>

        <TextView
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="41dp"
            android:text="Nueva CotizaciÃ³n"
            android:textColor="#5F5F5F"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

        <ImageButton
            android:id="@+id/filter"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:src="@drawable/filter1">
        </ImageButton>

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="278dp"
            android:layout_marginTop="59dp"
            android:text="Filtros"
            android:textColor="#5F5F5F"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="333dp"
            android:layout_marginTop="61dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/middle_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/view"
            android:layout_width="377dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-20dp"
            android:background="#94B8B7B7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-9dp"
            android:padding="16dp"
            android:text="Cotizaciones"
            android:textStyle="bold"
            android:textColor="#5F5F5F"
            android:textSize="18sp">
        </TextView>

        <View
            android:id="@+id/view_line"
            android:layout_width="377dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="15dp"
            android:background="#94B8B7B7" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCotizaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-2dp"
        android:clipToPadding="true"
        android:paddingBottom="70dp"
        app:layout_constraintTop_toBottomOf="@id/middle_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>