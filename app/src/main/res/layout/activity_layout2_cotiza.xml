            <!-- TextView y EditText para cada CheckBox -->
            <!-- Inicialmente, los elementos están ocultos -->

            <!--Inserción de datos de ML (Metros lineales) -->
            <TextView
                android:id="@+id/tv_ml"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Metros Lineales:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/et_ml"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Metros"
                android:paddingEnd="40dp"
                android:textSize="17sp"
                android:textColor="#5F5F5F"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/editex"/>

            <!-- Precio -->
            <TextView
                android:id="@+id/tex_precio"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Introduce el precio:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/ed_precio"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Precio"
                android:paddingEnd="40dp"
                android:textSize="17sp"
                android:textColor="#5F5F5F"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/editex"/>


            <!--Inserción de datos de HM (Horas Maquina) -->
            <TextView
                android:id="@+id/tv_hm"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Tiempo de alquiler:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/et_hm"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Horas"
                android:paddingEnd="40dp"
                android:textSize="17sp"
                android:textColor="#5F5F5F"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/editex"/>

            <!-- Precio -->
            <TextView
                android:id="@+id/tex_precio_hm"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Precio por hora:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/ed_precio_hm"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Precio"
                android:paddingEnd="40dp"
                android:textSize="17sp"
                android:textColor="#5F5F5F"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/editex"/>


    <Button
        android:id="@+id/GuardarButton"
        android:layout_width="235dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/switch_thumb_color"
        android:text="Generar cotización"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

    </Button>

            <ImageButton
                android:id="@+id/atras_coti1"
                android:layout_width="64dp"
                android:src="@drawable/icon_atras_siguiente"
                android:layout_height="64dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                >

            </ImageButton>

        </LinearLayout>

    </ScrollView>

</LinearLayout>