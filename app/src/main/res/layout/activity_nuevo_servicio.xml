<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuevo_servicio">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevo Servicio"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp">

            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#94B8B7B7"
                android:layout_marginTop="10dp"/>

            <TextView

                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Servicio:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                >

            </TextView>
            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/name_servicio"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:paddingEnd="40dp"
                    android:textSize="17sp"
                    android:textColor="#5F5F5F"
                    android:paddingStart="12dp"
                    android:background="@drawable/editex"
                    android:hint="Value"
                    android:focusable="false"
                    android:clickable="true"/>

                <Spinner
                    android:id="@+id/spinner_servicios"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"/>
            </FrameLayout>




            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="DescripciÃ³n:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                >

            </TextView>
            <EditText
                android:id="@+id/descrip_product"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="16dp"
                android:textSize="17sp"
                android:textColor="#5F5F5F"
                android:hint="Ej. Juan Perez"
                android:background="@drawable/editex">

            </EditText>

            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Precio:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                >

            </TextView>


            <EditText
                android:id="@+id/precio_produc"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/editex"
                android:hint="Precio de ML/UND"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="#5F5F5F"
                android:textSize="17sp">

            </EditText>
            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Stock:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                >

            </TextView>


            <EditText
                android:id="@+id/stock_product"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/editex"
                android:hint="ML/UND"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="#5F5F5F"
                android:textSize="17sp">

            </EditText>


            <TextView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="Agregue una imagen:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
            </TextView>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/imageEditText2"
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:background="@drawable/editex"
                    android:padding="67dp"
                    android:hint="No ha seleccionado una imagen"
                    android:gravity="top|start"
                    android:focusable="false"
                    android:clickable="false"
                    android:drawablePadding="8dp">
                </EditText>

                <ImageButton
                    android:id="@+id/add_image2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/add_imagen"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/button_background">

                </ImageButton>
            </FrameLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="56dp"
                android:id="@+id/guardar_producto"
                android:text="Agregar"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>